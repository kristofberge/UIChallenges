<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="thisView"
    x:Class="UiChallenges.Views.CruiseMobile.CruiseImageView">
    <Frame
        Padding="0"
        IsClippedToBounds="True"
        HasShadow="False"
        CornerRadius="10"
        AbsoluteLayout.LayoutBounds="0.8, 0.5, 0.6, 0.6"
        AbsoluteLayout.LayoutFlags="All">
        <Image
            Source="{Binding Source={x:Reference thisView}, Path=Image3}"
            Aspect="AspectFill"
            Opacity="0.3"/>
    </Frame>
    <Frame
        Padding="0"
        IsClippedToBounds="True"
        HasShadow="False"
        CornerRadius="10"
        AbsoluteLayout.LayoutBounds="0.3, 0.5, 0.8, 0.8"
        AbsoluteLayout.LayoutFlags="All">
        <Image
            Source="{Binding Source={x:Reference thisView}, Path=Image2}"
            Aspect="AspectFill"
            Opacity="0.5"/>
    </Frame>
    <Frame
        Padding="0"
        IsClippedToBounds="True"
        HasShadow="False"
        CornerRadius="10"
        AbsoluteLayout.LayoutBounds="0, 0, 0.8, 1"
        AbsoluteLayout.LayoutFlags="All">
        <Image
            Source="{Binding Source={x:Reference thisView}, Path=Image1}"
            Aspect="AspectFill"/>
    </Frame>
</AbsoluteLayout>
